<!-- Section: intro -->
<section id="intro" class="intro" style="margin-top: -30px;">
  <div class="intro-content">
    <div class="container" style="background-color: rgb(152, 231, 220, 0.4);padding: 20px;">
      <div class="row">

        <div class="col-md-5 col-lg-4 mb-5 mb-md-1">

          <h5>Login To Get Started</h5>
          <h5 style="font-size: 15px;">
            <a href="/" class="custom_button"><i class="fa fa-arrow-left"></i> Go Back</a>
          </h5>    

          <% if flash[:alert] %>
            <div class='alert alert-danger'><%= flash[:alert] %></div>
          <% end %>

        </div>

        <div class="col-md-6 col-lg-5">
          <div class="form-wrapper">
            <div class="wow fadeInRight" data-wow-duration="2s" data-wow-delay="0.2s">
              <div class="panel panel-skin">
                <div class="panel-heading">
                  <h3 class="panel-title">
                    <span class="fa fa-user"></span> 
                    Sign In!
                  </h3>
                </div>
                <div class="panel-body">

                  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

                    <div class='form-group'>
                      <%= f.email_field :email, class: 'form-control input-md', placeholder: 'Email' %>
                    </div>
                    <div class='form-group'>
                      <%= f.password_field :password, class: 'form-control input-md', placeholder: 'Password', autocomplete: 'current-password'  %>
                    </div>

                    <% if devise_mapping.rememberable? %>
                      <div class="field">
                        <%= f.check_box :remember_me %>
                        <%= f.label :remember_me %>
                      </div>
                    <% end %>

                    <%= f.submit 'Login', class: 'btn btn-primary' %>
                  <% end %>

                  <h5 class="lead-footer">
                    <span style="color:#ef3b23;">* </span>Not Registered??&emsp; 
                    <%= link_to "Sign Up!!", new_user_registration_path, :class => "custom_button" %>
                  </h5>

                </div>
              </div>        
            </div>
          </div>
        </div>
      </div>    
    </div>
  </div>    
</section>
<!-- /Section: intro -->

<!-- Section: boxes -->
